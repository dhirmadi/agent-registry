# Agentic Registry — Example Environment Variables
# Copy this file to .env and fill in real values.

# ── Required ──────────────────────────────────────────
DATABASE_URL=postgres://registry:registry@db:5432/agentic_registry?sslmode=disable
SESSION_SECRET=change-me-to-a-random-64-char-string
CREDENTIAL_ENCRYPTION_KEY=change-me-32-byte-hex-key-here!!

# ── Server ────────────────────────────────────────────
PORT=8090
LOG_LEVEL=info
EXTERNAL_URL=http://localhost:8090

# ── Google OAuth (optional) ───────────────────────────
# GOOGLE_OAUTH_CLIENT_ID=
# GOOGLE_OAUTH_CLIENT_SECRET=

# ── Webhooks ──────────────────────────────────────────
WEBHOOK_TIMEOUT=5
WEBHOOK_RETRIES=3
WEBHOOK_WORKERS=4

# ── OpenTelemetry (optional) ─────────────────────────
# OTEL_SERVICE_NAME=agentic-registry
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# ── PostgreSQL (used by the db service) ──────────────
POSTGRES_USER=registry
POSTGRES_PASSWORD=registry
POSTGRES_DB=agentic_registry
